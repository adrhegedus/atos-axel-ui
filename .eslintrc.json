{
    "env": {
        "node": true,
		"browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
		"react-hooks"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
		"curly": [
			"error",
			"multi-line"
		],
		"eqeqeq": [
			"warn",
			"smart"
		],
		"func-names": [
			"warn",
			"never"
		],
		"implicit-arrow-linebreak": [
			"error",
			"beside"
		],
		"comma-dangle": [
			"warn", {
				"objects": "only-multiline"
			}
		],
		"multiline-ternary": [
			"error",
			"always-multiline"
		],

		"block-scoped-var": "warn",
		"no-empty-function": "error",
		"no-multi-spaces": "error",
		"no-unused-labels": "warn",
		"no-unused-vars": "warn",
		"vars-on-top": "warn",
		"block-spacing": "error",
		"comma-spacing": "error",
		"comma-style": "warn",
		"func-call-spacing": "error",
		"jsx-quotes": "error",
		"key-spacing": "error",
		"keyword-spacing": "error",
		"no-mixed-spaces-and-tabs": "error",
		"no-trailing-spaces": "error",
		"spaced-comment": "warn",
		"arrow-spacing": "error",
		"prefer-const": "warn",
		"rest-spread-spacing": "error",
		"no-magic-numbers": [
			"warn", 
			{
				"ignore": [-1, 0, 1, 100],
				"ignoreArrayIndexes": true
			}
		],

		"react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    	"react-hooks/exhaustive-deps": "warn" // Checks effect dependencies
	}
}
